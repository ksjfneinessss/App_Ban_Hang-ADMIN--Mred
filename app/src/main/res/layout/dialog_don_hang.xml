<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/h3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Chi tiết đơn hàng"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:weightSum="10">

            <TextView
                style="@style/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/g_line"
                android:gravity="center"
                android:text="ID User: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIdUserDh"
                style="@style/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@color/g_white"
                android:gravity="center"
                android:text="ID User: "
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow android:weightSum="10">

            <TextView
                style="@style/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/g_line"
                android:gravity="center"
                android:text="Địa chỉ: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDiaChiDh"
                style="@style/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@color/g_white"
                android:gravity="center"
                android:text="Số nhà, Phường, Hà Nội"
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow android:weightSum="10">

            <TextView
                style="@style/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@color/g_line"
                android:gravity="center"
                android:text="SĐT: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSdtDh"
                style="@style/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@color/g_white"
                android:gravity="center"
                android:text="0123.456.789: "
                android:textSize="14sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:background="@color/g_search_and_icons"
            android:weightSum="10">

            <TextView
                style="@style/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/trang_thai_don_hang"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="8" />

        </TableRow>


    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dongy_dialog"
        style="@style/blueButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="@string/xac_nhan_dh"
        android:textColor="@color/white" />

</LinearLayout>